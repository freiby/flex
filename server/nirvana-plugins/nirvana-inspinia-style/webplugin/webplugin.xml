<?xml version="1.0" encoding="utf-8" ?>
<plugin
   id="com.wxxr.nirvana.style"
   name="FlexWebUI"
   version="1.0.0"
   provider-name="wxxr.com.cn"
   contextURI="flexWeb"
   messagebundle="styleMessage"
   >
    <requires>com.wxxr.nirvana.resources</requires>
    <extension
         id="nirvanaStyle"
         point="com.wxxr.nirvana.platform.themes">
      <theme
            id="nirvanaStyle_theme"
            name="nirvanaSytle"
            description="nirvanaSytledesc"
			default="true"
            >
			<desktop
				id="nirvanadesktop"
				name="desktop"
				description="desktopdesc"
				uri="baseLayout.jsp"
            >
			</desktop>	
			<resource ref="com.wxxr.nirvana.resources.bootstrap" point="header"></resource>
			<resource ref="com.wxxr.nirvana.resources.awesome" point="header"></resource>
			<resource ref="com.wxxr.nirvana.resources.toastrcss" point="header"></resource>
			<resource ref="com.wxxr.nirvana.resources.animate" point="header"></resource>
			<resource ref="com.wxxr.nirvana.resources.style" point="header"></resource>
			<resource ref="com.wxxr.nirvana.resources.showLoadingstyle" point="header"></resource>
			
			
			<resource ref="com.wxxr.nirvana.resources.jquery" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.bootstrapjs" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.jquery_metisMenu" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.jquery_slimscroll" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.jquer_ui" point="current"></resource>
			<resource ref="com.wxxr.nirvana.style.inspinia" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.toastrjs" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.Chart" point="current"></resource>
			<resource ref="com.wxxr.nirvana.style.embeddedjs1" point="current"></resource>
			<resource ref="com.wxxr.nirvana.style.embeddedjs2" point="current"></resource>
			<resource ref="com.wxxr.nirvana.style.embeddedjs3" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.jquery_flot" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.query_flot_tooltip" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.jquery_flot_spline" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.jquery_flot_resize" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.jquery_flot_pie_js" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.sparkline" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.sparkline_demo" point="current"></resource>


			<resource ref="com.wxxr.nirvana.resources.lodash" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.interaction" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.jsonrpcclient" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.showLoading" point="current"></resource>
			<resource ref="com.wxxr.nirvana.resources.nirvanarpc" point="current"></resource>
			
      </theme>
	 </extension>

	 <extension
         id="nirvanaStyle"
         point="com.wxxr.nirvana.platform.pagelayouts">
	  <pageLayout
				id="nirvanapagelayout"
				name="layout"
				description="layoutdesc"
				uri="pageContainer.jsp">
			</pageLayout>


			<pageLayout
				id="nirvanapagelayout2"
				name="layout"
				description="layoutdesc"
				class="com.wxxr.nirvana.inspinia.style.PageLayoutRender">
			</pageLayout>
   </extension>
   
   
   <extension
         id="pagenavigation"
         point="com.wxxr.nirvana.platform.uirenders">
	  	<uirender
				id="nirvanapagelayout"
				description="nirvanapagelayout"
				uri="menu.jsp"
				class="com.wxxr.nirvana.inspinia.style.PageNavigationRender">
		</uirender>
   </extension>


   <extension point="com.wxxr.nirvana.platform.resources" id="pages.niravanaPage">
		<resource
				id="embeddedjs1"   
				uri="js/embeddedjs1.js"
				type="js"
				>
		</resource>
		
		<resource
				id="embeddedjs2"   
				uri="js/embeddedjs2.js"
				type="js"
				>
		</resource>
		
		<resource
				id="embeddedjs3"   
				uri="js/embeddedjs3.js"
				type="js"
				>
		</resource>
		
		<resource
				id="inspinia"   
				uri="js/inspinia.js"
				type="js"
				>
		</resource>
   </extension>
</plugin> 
